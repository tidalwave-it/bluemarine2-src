<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>it.tidalwave.superpom</groupId>
        <artifactId>superpom</artifactId>
        <version>2.16</version>
        <relativePath />
    </parent>

    <groupId>it.tidalwave.bluemarine2</groupId>
    <artifactId>blueMarine2-master</artifactId>
    <version>1.0-ALPHA-4-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>blueMarine2 (master)</name>
    <description>blueMarine2 (master)</description>

    <properties>
        <scm.repo.url>https://bitbucket.org/tidalwave/blueMarine2~src</scm.repo.url>
        <scm.repo.readonly.url>http://bitbucket.org/tidalwave/blueMarine2~src</scm.repo.readonly.url>
        <scm.repo.browse.url>http://bitbucket.org/tidalwave/blueMarine2~src</scm.repo.browse.url>

        <tidalwave.ci.view>blueMarine2</tidalwave.ci.view>
        <tidalwave.issues>BMT</tidalwave.issues>

        <tft.maven.requiredJdk>[1.8.0-40,1.8.0-99)</tft.maven.requiredJdk>
        <tft.javac.source>1.8</tft.javac.source>
        <tft.javac.target>1.8</tft.javac.target>

        <tft.embedded-jdk-artifactId>it-tidalwave-oraclejdk8</tft.embedded-jdk-artifactId>
        <tft.embedded-jdk-classifier>macosx-intel</tft.embedded-jdk-classifier>
        <tft.embedded-jdk-name>jdk1.8.0</tft.embedded-jdk-name>
        <tft.embedded-jdk-version>1.8.0-1</tft.embedded-jdk-version>

        <netbeans.hint.jdkPlatform>JDK_1.8.0_40</netbeans.hint.jdkPlatform>
        <netbeans.hint.license>Tidalwave-ASF</netbeans.hint.license>
        <netbeans.compile.on.save>all</netbeans.compile.on.save>

        <tft.appbundle.name>blueMarine2</tft.appbundle.name>
        <tft.appbundle.signature>TDLW</tft.appbundle.signature>
    </properties>

    <url>http://blueMarine2.tidalwave.it</url>
    <inceptionYear>2015</inceptionYear>

    <issueManagement>
        <system>Jira</system>
        <url>http://services.tidalwave.it/jira/browse/BM2</url>
    </issueManagement>

    <mailingLists>
        <mailingList>
            <name>Continuous Integration</name>
            <post>ci@blueMarine2.java.net</post>
            <archive>http://bitbucket.org/projects/blueMarine2/lists/ci/archive</archive>
        </mailingList>
        <mailingList>
            <name>Developers</name>
            <post>dev@blueMarine2.java.net</post>
            <archive>http://bitbucket.org/projects/blueMarine2/lists/dev/archive</archive>
        </mailingList>
    </mailingLists>

    <repositories>
        <repository>
            <id>releases-oss.sonatype.org</id>
            <name>Sonatype Releases Repository</name>
            <url>http://oss.sonatype.org/content/repositories/releases/</url>
        </repository>
        <repository>
            <id>snapshots-oss.sonatype.org</id>
            <name>Sonatype Snapshots Repository</name>
            <url>http://oss.sonatype.org/content/repositories/snapshots/</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-commons</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-ui</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-ui-javafx</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-application-javafx</artifactId>    
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-cec</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-cecnavigationadapter</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-model</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-mediascanner</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>it.tidalwave.bluemarine2</groupId>
                <artifactId>it-tidalwave-bluemarine2-persistence</artifactId>
                <version>1.0-ALPHA-4-SNAPSHOT</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- Repeated because of http://jira.codehaus.org/browse/SCM-442 -->
    <scm>
        <connection>scm:hg:${scm.repo.readonly.url}</connection>
        <developerConnection>scm:hg:${scm.repo.effective.url}</developerConnection>
        <url>${scm.repo.browse.url}</url>
      <tag>HEAD</tag>
  </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <properties>
                        <property>
                            <name>listener</name>
                            <value>${tft.test.listeners}</value>
                        </property>
                    </properties>
                </configuration>
            </plugin>

            <!-- Needed for setting that inherited = false -->
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <inherited>false</inherited>
                <configuration>
                    <excludes>
                        <exclude>LICENSE.txt</exclude>
                        <exclude>**/*.mf</exclude>
                        <exclude>**/.revision</exclude>
                        <exclude>.hgtags</exclude>
                        <exclude>.hgignore</exclude>
                    </excludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>modules</module>
    </modules>
</project>
